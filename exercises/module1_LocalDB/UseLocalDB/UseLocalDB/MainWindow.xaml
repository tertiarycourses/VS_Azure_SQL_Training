<Window x:Class="UseLocalDB.MainWindow"
				xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
				xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
				xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
				xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
				xmlns:local="clr-namespace:UseLocalDB"
				mc:Ignorable="d"
				Title="MainWindow"
				Height="350"
				Width="525">
	<StackPanel Margin='40'>
		<TextBlock FontSize='36'
							 TextAlignment='Center'
							 Text='Use LocalDB' />
		<Button Content='Connect to LocalDB'
						Click='Button_Click' />
		<Button Content='Disconnect from LocalDB'
						Click='CloseButton_Click'
						x:Name='CloseButton' />

		<TextBlock x:Name='ConnectionState' />

		<ListBox x:Name='TestimonialListBox'  />

	</StackPanel>
</Window>
